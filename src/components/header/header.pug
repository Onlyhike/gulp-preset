mixin header(includeHomeLink)
    header.header
        a.header__logo
            img(src='/images/logo.svg', alt='logo')
        nav.header__menu
            ul.header__menu-list
                if includeHomeLink
                    li.header__menu-list-item
                        a.header__menu-link(href='/index.html') Home
                li.header__menu-list-item
                    a.header__menu-link(href='/about.html') About
                li.header__menu-list-item
                    a.header__menu-link(href='#') Contacts